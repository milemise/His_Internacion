extends ../layout

block content
  .max-w-2xl.mx-auto.bg-white.mt-10.p-8.rounded-2xl.shadow-lg
    h1.text-3xl.font-bold.text-blue-900.mb-6 Nueva Admisión

    form(action="/admisiones/nueva", method="POST" class="space-y-6")

      div
        label.block.text-sm.font-medium.text-gray-700 Paciente
        select(name="pacienteId" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
          option(value="") Seleccionar paciente
          each p in pacientes
            option(value=p.id)= p.nombre + ' ' + p.apellido

      div
        label.block.text-sm.font-medium.text-gray-700 Fecha de Ingreso
        input(type="datetime-local", name="fecha_ingreso" required class="w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")

      div
        label.block.text-sm.font-medium.text-gray-700 Motivo
        input(type="text", name="motivo", placeholder="Motivo de internación" required class="w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")

      button(type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-md shadow") Guardar
