extends ../layout

block content
  .max-w-2xl.mx-auto.mt-10.bg-white.p-8.rounded-2xl.shadow-lg
    h1.text-3xl.font-bold.text-red-700.mb-6 Ingreso por Emergencia

    form(method="POST" action="/emergencias" class="space-y-6")

      .grid.grid-cols-1.md:grid-cols-2.gap-4
        div
          label.block.text-sm.font-medium.text-gray-700(for="nombre") Nombre del Paciente
          input#nombre(type="text" name="nombre" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-red-500 focus:border-red-500")

        div
          label.block.text-sm.font-medium.text-gray-700(for="dni") DNI
          input#dni(type="text" name="dni" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-red-500 focus:border-red-500")

        div
          label.block.text-sm.font-medium.text-gray-700(for="sexo") Sexo
          select#sexo(name="sexo" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-red-500 focus:border-red-500")
            option(value="") Seleccionar
            option(value="masculino") Masculino
            option(value="femenino") Femenino

        div
          label.block.text-sm.font-medium.text-gray-700(for="motivo") Motivo
          input#motivo(type="text" name="motivo" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-red-500 focus:border-red-500")

      .text-right
        button(type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-6 rounded-md shadow") Internar de Urgencia
