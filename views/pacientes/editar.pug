extends ../layout

block content
  .max-w-3xl.mx-auto.bg-white.p-8.mt-10.rounded-2xl.shadow-lg
    h1.text-3xl.font-bold.text-blue-900.mb-6 Editar Paciente

    form(method="POST" action=`/pacientes/${paciente.id}/editar` class="space-y-6")

      .grid(class="grid-cols-1 md:grid-cols-2 gap-6")
        div
          label.text-sm.font-medium.text-gray-700(for="nombre") Nombre
          input#nombre(type="text" name="nombre" value=paciente.nombre required class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500")

        div
          label.text-sm.font-medium.text-gray-700(for="telefono") Teléfono
          input#telefono(type="text" name="telefono" value=paciente.telefono required class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500")

        div
          label.text-sm.font-medium.text-gray-700(for="direccion") Dirección
          input#direccion(type="text" name="direccion" value=paciente.direccion class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500")

        div
          label.text-sm.font-medium.text-gray-700(for="fecha_nacimiento") Fecha de Nacimiento
          input#fecha_nacimiento(type="date" name="fecha_nacimiento" value=paciente.fecha_nacimiento required class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500")

        div
          label.text-sm.font-medium.text-gray-700(for="obra_social") Obra Social
          input#obra_social(type="text" name="obra_social" value=paciente.obra_social class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500")

        div
          label.text-sm.font-medium.text-gray-700(for="sexo") Sexo
          select#sexo(name="sexo" required class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500")
            option(value="masculino" selected=paciente.sexo=="masculino") Masculino
            option(value="femenino" selected=paciente.sexo=="femenino") Femenino

        div
          label.text-sm.font-medium.text-gray-700(for="contacto_emergencia") Contacto de Emergencia
          input#contacto_emergencia(type="text" name="contacto_emergencia" value=paciente.contacto_emergencia class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500")

      .text-right
        button(type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-md shadow") Guardar Cambios
